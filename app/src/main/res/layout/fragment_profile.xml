<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragments.OfertaFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EBEEF4"
                android:gravity="center">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image"
                    android:layout_width="142dp"
                    android:layout_height="142dp"
                    android:layout_margin="20dp" />

            </LinearLayout>


            <androidx.appcompat.widget.AppCompatRatingBar
                android:id="@+id/rating_bar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:rating="0" />

            <TextView
                android:id="@+id/rating_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/museo_sans_cyrl_100"
                android:text="-, - Оценки"
                android:textColor="#4F4F4F"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/first_name_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:fontFamily="@font/museo_sans_cyrl_500"
                android:textSize="16sp"
                android:hint="Имя"
                android:text="Петров"
                android:background="@drawable/edit_text_bg"
                android:textColor="#4F4F4F" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginLeft="16dp"
                android:background="@color/colorGray" />

            <EditText
                android:id="@+id/last_name_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:fontFamily="@font/museo_sans_cyrl_500"
                android:hint="Фамилия"
                android:text="Александр"
                android:textColor="#4F4F4F"
                android:background="@drawable/edit_text_bg"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginLeft="16dp"
                android:background="@color/colorGray" />

            <EditText
                android:id="@+id/fathers_name_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:fontFamily="@font/museo_sans_cyrl_500"
                android:hint="Отчество"
                android:text="Викторович"
                android:textColor="#4F4F4F"
                android:background="@drawable/edit_text_bg"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginLeft="16dp"
                android:background="@color/colorGray" />

            <EditText
                android:id="@+id/phone_number_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:fontFamily="@font/museo_sans_cyrl_500"
                android:hint="Номер телефона"
                android:background="@drawable/edit_text_bg"
                android:textColor="#4F4F4F"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginLeft="16dp"
                android:background="@color/colorGray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/museo_sans_cyrl_500"
                    android:text="Получать уведомления"
                    android:textColor="#4F4F4F"
                    android:textSize="16sp" />

                <com.suke.widget.SwitchButton
                    android:id="@+id/notification_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:sb_checked="true"
                    app:sb_checked_color="@color/colorPrimary"
                    app:sb_checkline_color="@android:color/transparent"
                    app:sb_uncheckcircle_color="@android:color/transparent" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>